- breadcrumb :telegram, @client, @telegram
- model_class = Transports::Telegram
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:chat_name) + ':'
  %br
  = @telegram.chat_name
%p
  %strong= model_class.human_attribute_name(:chat_id) + ':'
  %br
  = @telegram.chat_id

- if policy(@telegram).edit?
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_transports_telegram_path(@client, @telegram), :class => 'btn btn-default'
- if policy(@telegram).destroy?
  = link_to t('.destroy', :default => t("helpers.links.destroy")), client_transports_telegram_path(@client, @telegram), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
