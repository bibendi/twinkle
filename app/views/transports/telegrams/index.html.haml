- breadcrumb :telegrams, @client
- model_class = Transports::Telegram
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:chat_name)
      %th= model_class.human_attribute_name(:chat_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @telegrams.each do |telegram|
      %tr
        %td= link_to telegram.id, edit_client_transports_telegram_path(@client, telegram)
        %td= link_to telegram.chat_name, client_transports_telegram_path(@client, telegram)
        %td= telegram.chat_id
        %td=l telegram.created_at
        %td
          - if policy(telegram).edit?
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_transports_telegram_path(@client, telegram), :class => 'btn btn-default btn-xs'
          - if policy(telegram).destroy?
            = link_to t('.destroy', :default => t("helpers.links.destroy")), client_transports_telegram_path(@client, telegram), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

- if policy(@client).create_transport?
  = link_to t('.new', :default => t("helpers.links.new")), new_client_transports_telegram_path(@client), :class => 'btn btn-primary'
