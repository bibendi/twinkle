- breadcrumb :client_users, @client
- model_class = ClientUser
.page-header
  %h1=t '.title', default: "#{@client.name.titleize} #{User.model_name.human.titleize}"
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user)
      %th= model_class.human_attribute_name(:role)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @client_users.each do |client_user|
      %tr
        %td= client_user.id
        %td= client_user.username
        %td= client_user.role.name
        %td=l client_user.created_at
        %td
          - if policy(client_user).edit?
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_user_path(@client, client_user), :class => 'btn btn-default btn-xs'
          - if policy(client_user).destroy?
            = link_to t('.destroy', :default => t("helpers.links.destroy")), client_user_path(@client, client_user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

- if policy(@client).create_member?
  = link_to t('.new', :default => t("helpers.links.new")), new_client_user_path(@client), :class => 'btn btn-primary'
