- breadcrumb :channels, @client
- model_class = Channel
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @channels.each do |channel|
      %tr
        %td= link_to channel.id, edit_client_channel_path(@client, channel)
        %td= link_to channel.name, client_channel_path(@client, channel)
        %td= channel.active
        %td=l channel.created_at
        %td
          - if policy(channel).edit?
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_channel_path(@client, channel), :class => 'btn btn-default btn-xs'
          - if policy(channel).destroy?
            = link_to t('.destroy', :default => t("helpers.links.destroy")), client_channel_path(@client, channel), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

- if policy(@client).create_channel?
  = link_to t('.new', :default => t("helpers.links.new")), new_client_channel_path(@client), :class => 'btn btn-primary'
